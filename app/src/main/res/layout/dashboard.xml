<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/logo_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashboardLogoHeight"
        android:padding="8dp"
        android:src="@drawable/neth_logo_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/dashboardParentMargin"
            android:layout_marginVertical="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/recent_calls"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_image_view">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tob_buttons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bottomButtons"
                app:layout_constraintVertical_chainStyle="packed">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dialer_btn"
                    style="@style/NethCTIButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@+id/history_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_gravity="center"
                    app:iconSize="@dimen/dashboardIconSize"
                    app:icon="@drawable/ic_phone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/history_btn"
                    style="@style/NethCTIButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/dashboardMargin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dialer_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_gravity="center"
                    app:iconSize="@dimen/dashboardIconSize"
                    app:icon="@drawable/ic_history" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottomButtons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dashboardMargin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tob_buttons"
                app:layout_constraintBottom_toBottomOf="parent">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/contacts_btn"
                    style="@style/NethCTIButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@+id/setting_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:iconSize="@dimen/dashboardIconSize"
                    app:icon="@drawable/ic_contacts" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/setting_btn"
                    style="@style/NethCTIButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/dashboardMargin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/contacts_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_gravity="center"
                    app:iconSize="@dimen/dashboardIconSize"
                    app:icon="@drawable/ic_settings" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/recent_calls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@id/buttonContainer"
            app:layout_constraintBottom_toBottomOf="parent">

            <include
                layout="@layout/dashboard_card"
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <include
                layout="@layout/dashboard_card"
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
