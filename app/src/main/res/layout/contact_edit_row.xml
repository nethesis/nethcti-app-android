<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:paddingBottom="5dp">

    <EditText
        android:id="@+id/numoraddr"
        style="@style/NethCTIEditContactControl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toStartOf="@+id/delete_field"
        android:layout_toLeftOf="@+id/delete_field"
        android:textColor="@color/primaryTextColor"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@null" />

    <ImageView
        android:id="@+id/delete_field"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:contentDescription="@string/content_description_add"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:padding="8dp"
        android:background="@drawable/round_accent_button_background"
        android:backgroundTint="@color/delete_address_button"
        android:src="@drawable/ic_remove"/>

</RelativeLayout>
