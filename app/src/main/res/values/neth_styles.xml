<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- The base font -->
    <style name="neth_small_font" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="neth_medium_font" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="neth_title_font" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="neth_field_header_font" parent="neth_medium_font">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- Panels -->
    <style name="neth_base_panel">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="neth_field_container_panel" parent="neth_base_panel">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <!-- Buttons -->
    <style name="neth_primary_button_font" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="neth_secondary_button_font" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>

    <!-- Text fields -->
    <style name="neth_primary_text_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="backgroundColor">@color/colorAccent</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="boxStrokeColor">@color/colorAccentLight</item>
        <item name="colorControlNormal">?attr/backgroundColor</item>
        <item name="colorControlActivated">@color/colorAccentLight</item>
        <item name="android:colorControlHighlight">@color/colorAccentLight</item>
    </style>

    <style name="neth_primary_text_layout_theme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/colorAccentLight</item>
        <item name="colorControlActivated">@color/colorAccentLight</item>
        <item name="android:colorControlHighlight">@color/colorAccentLight</item>
    </style>
</resources>